{
  "name": "wowza-webrtc-js",
  "version": "0.0.1",
  "description": "Wowza WebRTC JS Library",
  "main": "dist/webrtc.min.js",
  "repository": "https://github.com/hirokazumiyaji/wowza-webrtc-js.git",
  "author": "Hirokazu Miyaji",
  "license": "MIT",
  "scripts": {
    "build:development": "webpack --cache false --mode development --output-filename [name].js --config webpack.config.js",
    "build:production": "webpack --cache false --mode production --output-filename [name].min.js --config webpack.config.js",
    "format": "prettier --write --no-semi --single-quote src/*.js",
    "lint": "eslint ./src",
    "dev": "http-server ./example"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-flow": "^7.8.3",
    "@babel/register": "^7.8.6",
    "acorn": "^7.1.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "flow-bin": "^0.120.1",
    "http-server": "^0.12.1",
    "prettier": "^1.19.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
